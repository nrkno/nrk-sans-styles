import Foundation
import UIKit

#if os(iOS)
public enum FontStyle {
<%casesiOS%>
    public var fontStyle: UIFont.TextStyle {
        switch self {<%fontStyleiOS%>
        }
    }

    public var fontWeight: CGFloat {
        switch self {<%fontWeightiOS%>
        }
    }

    public var pointSize: CGFloat {
        switch self {<%pointSizeiOS%>
        }
    }

    public var lineHeight: CGFloat? {
        switch self {<%lineHeightiOS%>
        }
    }

    public var kerning: CGFloat? {
        switch self {<%kerningiOS%>
        }
    }
}
#elif os(tvOS)
public enum FontStyle {
<%casestvOS%>
    public var fontStyle: UIFont.TextStyle {
        switch self {<%fontStyletvOS%>
        }
    }

    public var fontWeight: CGFloat {
        switch self {<%fontWeighttvOS%>
        }
    }

    public var pointSize: CGFloat {
        switch self {<%pointSizetvOS%>
        }
    }

    public var lineHeight: CGFloat? {
        switch self {<%lineHeighttvOS%>
        }
    }

    public var kerning: CGFloat? {
        switch self {<%kerningtvOS%>
        }
    }
}
#endif

